{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true,
    "commonjs": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "react/prop-types": 0,
    "import/extensions": 0,
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": true
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-vars": [2],
    "quotes": [2, "single"],
    "semi": ["error", "never"]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["components", "./components"],
          ["styles", "./styles"],
          ["utils", "./utils"]
        ],
        "extensions": [".ts", ".js", ".jsx", ".json", ".css", ".scss", ".tsx"]
      }
    }
  }
}
